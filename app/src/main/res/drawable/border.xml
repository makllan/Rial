<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fundo do Card -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor de fundo -->
        </shape>
    </item>

    <!-- Borda do Card -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#000000"/> <!-- Cor e espessura da borda -->
            <corners android:radius="7dp"/> <!-- Raio dos cantos -->
        </shape>
    </item>
</layer-list>